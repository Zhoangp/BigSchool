@model BigSchool.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Create", "Course"))
{
<h2>Add Book</h2>
<form>
    <div class="form-group mt-3">
        @Html.LabelFor(m => m.Place)
        @Html.TextBoxFor(m => m.Place, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Place, null, new {@class = "text-danger"})
    </div>
    <div class="form-group mt-3">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Date, null, new {@class = "text-danger"})

    </div>
    <div class="form-group mt-3">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Time, null, new {@class = "text-danger"})
    </div>
    <div class="form-group mt-3">
        @Html.LabelFor(m => m.Category)
        @Html.DropDownListFor(m => m.Category, 
        new SelectList(Model.Categories, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Category, null, new {@class = "text-danger"})

    </div>
    <button type="submit" value="Save" class="btn btn-primary" style="margin-top: 15px">Save</button>
    
</form>
}
